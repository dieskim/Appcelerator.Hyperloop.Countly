<Alloy>
		<View id="mainWindow">			
			<View id="mainWrapper">
				<View id="main">
					<View id="topBar">
						<View id="homeButtonBox">
							<View id="homeButtonView">						
							</View>
						</View>
						<View id="titleTop">
						</View>
						<View id="backButtonBox">
							<View id="backButtonView">		
								<Button id="drawerButton" onClick="openCloseMenu"></Button>						
							</View>
						</View>
					</View>	<!-- End Top Bar -->
					<View id="bottomArea">			
							<ScrollView id="indexScrollView">
									<View id="bookCategoriesView">
											<Button id="leftPadding" />
											<Button id="ntCategoryImage" openFrom="indexImage" openView="nt" onClick="openBookCategory" />
										   	<Button id="psalmsCategoryImage" openFrom="indexImage" openView="psalms" onClick="openBookCategory" />
										   	<Button id="otCategoryImage" openFrom="indexImage" openView="ot" onClick="openBookCategory" />
									</View>	<!-- End bookCategoriesView -->
									<View id="scrollViewContainer">					
										<ScrollView id="scrollView_1" class="scrollView">
										</ScrollView>					
									</View>	<!-- End scrollViewContainer -->													
									<View id="scrollViewContainer">					
											<ScrollView id="scrollView_2" class="scrollView"></ScrollView>					
									</View>	<!-- End scrollViewContainer -->								
									<View id="scrollViewContainer">					
											<ScrollView id="scrollView_3" class="scrollView"></ScrollView>						
									</View>	<!-- End scrollViewContainer -->
									<View id="scrollViewContainer">					
											<ScrollView id="scrollView_4" class="scrollView"></ScrollView>						
									</View>	<!-- End scrollViewContainer -->
							</ScrollView>	<!-- End IndexScrollView -->
							<View id="dailyContentArea">						
							</View>	<!-- End dailyContentArea -->
					</View> <!-- End Bottom Area -->			
				</View>	<!-- End Main -->
				<Require src="networkMessageView"/> <!-- Require networkMessageView -->
			</View>				        				        		
	</View>
</Alloy>