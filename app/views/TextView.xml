<Alloy>
	<View id="textWindow">
			<View id="main">				
				<View id="topBar">
					<View id="homeButtonBox">
						<View id="textViewhomeButtonView">	
							<Button id="backButton" closeFrom="TextView" onClick="navigationOpenClose.closeNavigationView"></Button>			
						</View>
					</View>
					<View id="titleTop">
							<View id="menuView" onClick="showBookMenu">
							<ImageView id="bookMenuImage" image="/images/book_menu_image.png" />	
							<View class="menuLabels" id="menu_button">
								<Label class="menu_button" id="menu_button_index"></Label>		
							</View>
							</View>
					</View>
					<View id="backButtonBox">
						<View id="backButtonView">	
							<Button id="drawerButton" onClick="openCloseMenu"></Button>								
						</View>
					</View>
				</View>						
				<View id="TextScrollBox">			
				</View>			
			</View>
			<Require src="networkMessageView"/> <!-- Require networkMessageView -->	
	</View>
</Alloy>