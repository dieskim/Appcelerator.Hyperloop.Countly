<Alloy>
	<View id="settingsWindow">
		<View id="main">
				<View id="bottomArea">
					<View id="contentArea">
						<View class="menuViewHead">
							<View class="menuViewBox">
								<View id="backButtonView"></View>
							</View>								
						</View>
						<View class="menuViewRowSeperator"></View>
						<View id="menuScrollView">
							<TableView id="menuTable">
									<TableViewRow class="menuViewRow">
										<View class="menuViewBox" onClick="navigationOpenClose.navigationGoHome">
											<ImageView class="menuViewImage" image="/images/menu_home.png" />
											<View class="menuViewLabelBox">
												<Label class="menuViewLabel" id="homeLabel"></Label>
											</View>
										<View class="menuViewRowSeperator"></View>
										</View>									
									</TableViewRow>
									<TableViewRow class="menuViewRow">
										<View class="menuViewBox" openFrom="drawer" openView="otCategory" onClick="navigationOpenClose.openNavigationView">
											<ImageView class="menuViewImage" image="/images/menu_book_side.png" />
											<View class="menuViewLabelBox">
												<Label class="menuViewLabel" id="ot_label"></Label>
											</View>
										<View class="menuViewRowSeperator"></View>
										</View>
									</TableViewRow>
									<TableViewRow class="menuViewRow">
										<View class="menuViewBox" onClick="openPsalms">
											<ImageView class="menuViewImage" image="/images/menu_book_side.png" />
											<View class="menuViewLabelBox">
												<Label class="menuViewLabel" id="psalms_label"></Label>
											</View>
										<View class="menuViewRowSeperator"></View>
										</View>
									</TableViewRow>
									<TableViewRow class="menuViewRow">
										<View class="menuViewBox" openFrom="drawer" openView="ntCategory" onClick="navigationOpenClose.openNavigationView">
											<ImageView class="menuViewImage" image="/images/menu_book_side.png" />
											<View class="menuViewLabelBox">
												<Label class="menuViewLabel" id="nt_label"></Label>
											</View>
										<View class="menuViewRowSeperator"></View>
										</View>
									</TableViewRow>
									<TableViewRow class="menuViewRow">
										<View class="menuViewBox" openFrom="drawer" openView="topicCategories" onClick="navigationOpenClose.openNavigationView">
											<ImageView class="menuViewImage" image="/images/menu_scroll_active.png" />
											<View class="menuViewLabelBox">
												<Label class="menuViewLabel" id="topics_label"></Label>
											</View>
										<View class="menuViewRowSeperator"></View>
										</View>
									</TableViewRow>
									<TableViewRow class="menuViewRow">
										<View class="menuViewBox" openFrom="drawer" openView="questionCategories" onClick="navigationOpenClose.openNavigationView">
											<ImageView class="menuViewImage" image="/images/menu_question.png" />
											<View class="menuViewLabelBox">
												<Label class="menuViewLabel" id="questions_label"></Label>
											</View>
										<View class="menuViewRowSeperator"></View>
										</View>
									</TableViewRow>
									<TableViewRow class="menuViewRow">
										<View class="menuViewBox" onClick="openDownloads">
											<ImageView class="menuViewImage" image="/images/menu_download.png" />
											<View class="menuViewLabelBox">
												<Label class="menuViewLabel" id="downloads_label"></Label>
											</View>
										<View class="menuViewRowSeperator"></View>
										</View>
									</TableViewRow>								
									<TableViewRow class="menuViewRow" onClick="openFontSize">
										<View class="menuViewBox">
											<ImageView class="menuViewImage" image="/images/menu_font.png" />
											<View class="menuViewLabelBox">
												<Label class="menuViewLabel" id="fontsize_label"></Label>
											</View>
										<View class="menuViewRowSeperator"></View>
										</View>
									</TableViewRow>
									<TableViewRow class="menuViewRow">
										<View class="menuViewBox" onClick="openContact">
											<ImageView class="menuViewImage" image="/images/menu_contact.png" />
											<View class="menuViewLabelBox">
												<Label class="menuViewLabel" id="contact_label"></Label>
											</View>
										<View class="menuViewRowSeperator"></View>
										</View>
									</TableViewRow>
									<TableViewRow class="menuViewRow">
										<View class="menuViewBox" onClick="openShareApp">
											<ImageView class="menuViewImage" image="/images/menu_share.png" />
											<View class="menuViewLabelBox">
												<Label class="menuViewLabel" id="shareapp_label"></Label>
											</View>
											<View class="menuViewRowSeperator"></View>
										</View>	
									</TableViewRow>
									<TableViewRow class="menuViewRow" id="updateRow">
										<View class="menuViewBox" onClick="runUpdateCheck" >
											<ImageView class="menuViewImage" image="/images/menu_update.png" />
											<View class="menuViewLabelBox">
												<Label class="menuViewLabel" id="update_label"></Label>
											</View>
										<View class="menuViewRowSeperator"></View>
										</View>
									</TableViewRow>						
									<TableViewRow class="menuViewRow">
										<View class="menuViewBox" onClick="openSubscribe">
											<ImageView class="menuViewImage" image="/images/menu_subscribe.png" />
											<View class="menuViewLabelBox">
												<Label class="menuViewLabel" id="subscribe_label"></Label>
											</View>
										<View class="menuViewRowSeperator"></View>
										</View>
									</TableViewRow>					
						      </TableView>		
						</View>	<!-- End menuScrollView -->	      						
					</View>	<!-- End Content Area -->
				</View> <!-- End Bottom Area -->			
			</View>	<!-- End Main -->	
			<Require src="networkMessageView"/> <!-- Require networkMessageView -->			
    </View>
</Alloy>